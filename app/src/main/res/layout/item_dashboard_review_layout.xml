<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_dashboard_margin"
    android:gravity="center"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:padding="@dimen/item_dashboard_padding">

    <LinearLayout
        android:id="@+id/ll_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/review_user_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/round_iamge"
            android:contentDescription="@string/content_description"
            android:src="@drawable/splash_background"/>

                    <TextView
                        android:id="@+id/review_user_name_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:layout_marginLeft="25dp"
                        android:text="Nirmalya Saha"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/checkout_label_value_textSize" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_review_item_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorLightGrey"
                    android:contentDescription="@string/content_description"
                    android:minHeight="200dp"
                    android:scaleType="fitXY"
                    android:layout_below="@+id/ll_user"
                    android:src="@drawable/splash_background" />

                <LinearLayout
                    android:id="@+id/ll_review_item_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_review_item_image"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dashboard_item_paddingStartEnd"
                    android:paddingTop="@dimen/dashboard_item_paddingTopBottom"
                    android:paddingEnd="@dimen/dashboard_item_paddingStartEnd"
                    android:paddingBottom="15dp">

                    <TextView
                        android:id="@+id/tv_review_item_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryText"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="Item Name" />

                    <TextView
                        android:id="@+id/tv_review_item_auhtor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="Author" />

                    <TextView
                        android:id="@+id/tv_review_item_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dashboard_item_price_marginTop"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="$100.00" />

                    <TextView
                    android:id="@+id/tv_review_item_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dashboard_item_price_marginTop"
                    android:textColor="@color/colorSecondaryText"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:maxLines="2"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    tools:text="Description" />
                </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_below="@id/ll_review_item_details"
        android:background="@color/colorBorder" />
            </RelativeLayout>