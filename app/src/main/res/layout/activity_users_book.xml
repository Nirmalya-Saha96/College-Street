<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ui.activities.UsersBookActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_user_book_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/rl_not_found_user_book"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_not_found_search"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:src="@drawable/not_found" />

        <live.nirmalyasaha.me.bookstore.utils.MSPTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_not_found_search"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="Not Found"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>