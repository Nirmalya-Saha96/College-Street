<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <live.nirmalyasaha.me.bookstore.utils.MSPTextView
        android:id="@+id/tv_message"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="4dp"
        android:background="@drawable/round_chats_to"
        android:padding="14dp"
        android:text="This is a sample message that will appear"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="16sp" />

    <live.nirmalyasaha.me.bookstore.utils.MSPTextView
        android:visibility="visible"
        android:id="@+id/tv_bot_message"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="4dp"
        android:background="@drawable/round_chats_from"
        android:padding="14dp"
        android:text="This is a sample message that will appear"
        android:textColor="@color/colorPrimaryText"
        android:textSize="16sp" />


</RelativeLayout>